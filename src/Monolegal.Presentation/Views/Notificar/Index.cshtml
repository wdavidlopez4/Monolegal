@model Monolegal.Application.Core.ViewModels.NotificacionVM

@{
    ViewData["Title"] = "Crear registro";
}

    <div class="jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">Envia la notificación de desactivación de cuenta a todos los clientes morosos .</p>
        <hr class="my-4">
        <p>todos los clientes recibirán un mensaje a WhatsApp de que su cuenta será desactivada. Por favor escriba el mensaje.</p>
    </div>


<div class="form-row">
    <div class="col-md-12">
        <form method="post" asp-controller="Notificar" asp-action="Index" class="form-group" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mensaje.Notificacion" class="control-label"></label>
                <input asp-for="Mensaje.Notificacion" type="text" class="form-control" />
                <span asp-validation-for="Mensaje.Notificacion" class="text-danger"></span>
            </div>

            <div class="container">
                <div class="row">
                    <!--enviar formulario-->
                    <div class="col-sm">
                        <input type="submit" value="Guardar y enviar" class="btn btn-outline-dark" />
                    </div>
                    <!--regresar a la lista de mensajes-->
                    <div class="col-sm">
                        <a asp-action="Index" class="btn btn-outline-dark">Volver a lista</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
